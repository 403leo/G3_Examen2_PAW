<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAWMartes</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Plant01/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Plant01/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Plant01/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Plant01/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Plant01/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/Plant01/css/main.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    @Html.Partial("_Encabezado");

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @Html.Partial("_PiePagina");
    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Vendor JS Files -->
    <script src="~/Plant01/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Plant01/vendor/php-email-form/validate.js"></script>
    <script src="~/Plant01/vendor/aos/aos.js"></script>
    <script src="~/Plant01/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Plant01/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Plant01/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/Plant01/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Plant01/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/Plant01/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>