@using Microsoft.AspNetCore.Http
@{
    // Alternativa usando ViewContext
    var rol = ViewContext.HttpContext.Session.GetString("Rol");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAWMartes</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Plant02/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Plant02/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Plant02/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Plant02/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Plant02/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/Plant02/css/main.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header id="header" class="header dark-background d-flex flex-column">
        <i class="header-toggle d-xl-none bi bi-list"></i>
        <div class="profile-img">
            <img src="~/plant02/img/my-profile-img.jpg" alt="" class="img-fluid rounded-circle">
        </div>

        <a href="index.html" class="logo d-flex align-items-center justify-content-center">
            <h1 class="sitename">EventCorp</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li>
                    <a class="active" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house navicon"></i> Home</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-file-earmark-text navicon"></i> Privacy</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="ListaServicios"><i class="bi bi-file-earmark-text navicon"></i> Servicios</a>
                </li>
                @if (rol == "Admin")
                    {
                <li>
                    <a asp-area="" asp-controller="Usuario" asp-action="Lista"><i class="bi bi-person navicon"></i> Usuarios</a>
                </li>
                    }
                
           
                <li>
                    <a asp-area="" asp-controller="Evento" asp-action="Index"><i class="bi bi-person navicon"></i> Eventos</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Categoria" asp-action="Index"><i class="bi bi-person navicon"></i> Categorias</a>
                </li>
 
                <li>
                    <a asp-area="" asp-controller="Usuario" asp-action="CerrarSesion"><i class="bi bi-person navicon"></i> Logout</a>
                </li>
                



            </ul>
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer position-relative light-background">

        <div class="container">
            <div class="copyright text-center ">
                <p>© <span>Copyright</span> <strong class="px-1 sitename">EventCorp</strong> <span>All Rights Reserved</span>  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </div>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> Distributed by <a href="https://themewagon.com">ThemeWagon</a>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


    <!-- Vendor JS Files -->
    <script src="~/Plant02/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Plant02/vendor/php-email-form/validate.js"></script>
    <script src="~/Plant02/vendor/aos/aos.js"></script>
    <script src="~/Plant02/vendor/typed.js/typed.umd.js"></script>
    <script src="~/Plant02/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Plant02/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/Plant02/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Plant02/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/Plant02/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Plant02/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/Plant02/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>

    header.header .container-fluid {
        background-color: transparent !important;
    }

</style>