@model IEnumerable<PAWMartes.Models.Evento>

<h2>Eventos y Usuarios Inscritos</h2>

@foreach (var evento in Model)
{
    <h3>@evento.Titulo</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha de Inscripción</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var asistente in evento.Asistentes)
            {
                <tr>
                    <td>
                        @if (asistente.Usuario != null)
                        {
                            @asistente.Usuario.Nombre
                        }
                        else
                        {
                            <span>No disponible</span>
                        }
                    </td>
                    <td>@asistente.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                    <td>@(asistente.Asistencia ? "Asistió" : "No Asistió")</td>
                </tr>
            }
        </tbody>
    </table>
}
